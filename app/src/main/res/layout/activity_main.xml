<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <com.joelzhu.calendar.JZCalendar xmlns:calendar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendar_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        calendar:dateBackground="@color/transparent"
        calendar:dateTextColor="@color/textPrimary"
        calendar:dateTextSize="16sp"
        calendar:monthBarBackground="@color/transparent"
        calendar:monthBarTextColor="@color/white"
        calendar:monthBarTextSize="20sp"
        calendar:otherTextColor="@color/white"
        calendar:selectTextColor="@color/white"
        calendar:todayTextColor="@color/red" />
</LinearLayout>